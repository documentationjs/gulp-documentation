{
  "name": "gulp-documentation",
  "description": "documentation plugin for gulp",
  "version": "3.2.0",
  "author": "Tom MacWright",
  "dependencies": {
    "documentation": "4.0.0-rc.0",
    "through2": "^2.0.1",
    "vinyl": "^2.0.0"
  },
  "devDependencies": {
    "concat-stream": "^1.4.8",
    "cz-conventional-changelog": "^2.0.0",
    "gulp": "^3.8.11",
    "husky": "^0.14.0",
    "lint-staged": "^3.4.0",
    "prettier": "^0.22.0",
    "standard-version": "^4.0.0",
    "tap": "10.3.2"
  },
  "keywords": [
    "documentation",
    "gulp",
    "gulpplugin",
    "jsdoc"
  ],
  "license": "BSD-2-Clause",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:documentationjs/gulp-documentation.git"
  },
  "scripts": {
    "release": "standard-version",
    "precommit": "lint-staged --verbose",
    "format": "prettier --write '{lib,test}/**/*.js' --single-quote",
    "docs": "documentation readme index.js --section=API",
    "test": "tap test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote"
    ]
  }
}
