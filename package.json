{
  "name": "gulp-documentation",
  "description": "documentation plugin for gulp",
  "version": "3.2.1",
  "author": "Tom MacWright",
  "dependencies": {
    "through2": "^2.0.3",
    "vinyl": "^2.1.0"
  },
  "peerDependencies": {
    "documentation": ">=4.0.0",
    "gulp": ">=3.0.0"
  },
  "devDependencies": {
    "documentation": "^7.0.0",
    "gulp": "^3.9.1",
    "concat-stream": "^1.6.0",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.7.4",
    "standard-version": "^4.3.0",
    "tap": "10.7.1"
  },
  "keywords": [
    "documentation",
    "gulp",
    "gulpplugin",
    "jsdoc"
  ],
  "license": "BSD-2-Clause",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:documentationjs/gulp-documentation.git"
  },
  "scripts": {
    "release": "standard-version",
    "precommit": "lint-staged --verbose",
    "format": "prettier --write '{lib,test}/**/*.js' --single-quote",
    "docs": "documentation readme index.js --section=API",
    "test": "tap test/test.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote"
    ]
  }
}
